<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple3">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profilepicture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="15dp"
            app:cardCornerRadius="150dp"
            android:layout_marginTop="150dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/purple1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/cv"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:id="@+id/personelinfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilepicture"
            android:gravity="center">
            <TextView
                android:id="@+id/nametextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZINEEDDINE BOUMRAR"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/black1"
                android:fontFamily="@font/lcdmonobold"
                android:letterSpacing="0.15"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile developer"
                android:textColor="@color/black1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="@font/lcdmonobold"
                android:letterSpacing="0.2"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zineeddine.boumrar@gmail.com"
                android:layout_marginTop="20dp"
                android:textColor="@color/black1"
                android:textAlignment="center"
                android:textSize="12sp"
                android:fontFamily="@font/lcdmonobold"
                android:letterSpacing="0.1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personelinfos"
            android:layout_marginTop="60dp">
            <ImageView
                android:id="@+id/instagram"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_instagram"
                app:tint="@color/purple1"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/twitter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_twitter"
                app:tint="@color/purple1"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_linkedin"
                app:tint="@color/purple1"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/github"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_github"
                app:tint="@color/purple1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>